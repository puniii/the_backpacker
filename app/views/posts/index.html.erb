<aside class="callout">
    <div class="text-vertical-center">
        <h1>Index</h1>
    </div>
</aside>

<div class="container">
  <p><%= notice %></p>
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <div class="post-preview">
        <h1>Listing topics</h1>
        <%= search_form_for @search do |f| %>


          <%= f.label :spot_cont, '行った場所を検索しよう' %>

            <span class="input-group-btn">
            <%= f.text_field :spot_cont , class:"form-control" ,placeholder:"Search for..." ,type:"text" %>
            <%= f.submit 'Go',class:"btn btn-default" ,type:"submit" %>
            </span>
            <% end %>

        <br>
      </div>
      <br>
    </div>



