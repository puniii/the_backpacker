    <div class="input-group">
      <input type="text" class="form-control" placeholder="Search for...">
      <span class="input-group-btn">
        <button class="btn btn-default" type="button">Go!</button>
      </span>
    </div><! /input-group -->
  <!-- </div><! /.col-lg-6 -->
<!-- </div> -->



    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <div class="post-preview">
        <% @posts.each do |post| %>
          <p class="post-meta"><%= image_tag(post.user.image , size: 30) %>
            <%= post.user.name %></p>
          <h2 class="post-title">
            <%= post.spot %>
          </h2>
          <h3 class="post-subtitle">
            <% if post.image.present? %>
              <%= image_tag(post.image , size: 50) %>
            <% end %>
          </h3>
          <p class="post-meta">投稿日<%= post.created_at %></p>
          <br>
          <%= link_to '続きを見る', post_path(post.id), class: 'btn btn-default'%>

          <hr>
        <% end %>

<%= paginate @post %>
      </div>
    </div>


    <%= link_to 'New tweet!', new_post_path, class: 'btn btn-info'%>
  </div>
</div>

<hr>
