<aside class="callout">
  <div class="text-vertical-center">
    <h1>contact?</h1>
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2>お問い合わせありがとうございました</h2>
      </div>
    </div>
  </div>
</aside>

<div name="sentMessage" id="contactForm" novalidate="novalidate">
  <p id="notice"><%= notice %></p>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 offset-2 text-center">
        <h3>
          <i class="fa far fa-share-square fa-fw fa-2x"></i>
          <strong>お問い合わせを受付しました</strong>
        </h3>
        <hr class="small">
        <div class="post-preview">

          <p class="lead">
            <i class="fa fas fa-user-circle fa-fw fa-2x"></i>：<%= @contact.name %></p>
          <p class="lead">
            <i class="fa far fa-envelope fa-fw fa-2x"></i>：<%= @contact.email %></p>
          <p class="lead">
            <i class="fa far fa-comment fa-fw fa-2x"></i>：<%= @contact.content %></p>

          <hr class="small">
          <p class="lead">回答までしばらくお待ちください</p>

          <%= link_to 'お問い合わせページへ戻る', new_contact_path , class: 'btn btn-dark btn-lg' %></h2>
        <br>
        <br>
      </div>
    </div>
  </div>
</div>
</div>
